
<div class="container">
  
  <div class="row">
    
    <div class="col-lg-12">
      <h1 class="page-header"><i class="fa fa-info"></i> About<small> It's Nice to Meet You!</small></h1>
      <ol class="breadcrumb">
        <li><a href="<%= data.site.url %>">Home</a>
        </li>
        <li class="active">About</li>
      </ol>
    </div>
    
  </div>
  
  <div class="row">
    
    <div class="col-md-6">
      <img class="img-responsive" src="<%= data.site.about_image %>">
    </div>
    <div class="col-md-6">
      <h2><%= data.site.title %></h2>
      <h4><%= data.site.tagline %></h4>
      <%= data.site.about_text %>
      <p><i class="fa fa-phone"></i> <abbr title="Phone">P</abbr>: <%= data.site.phone %></p>
      <p><i class="fa fa-envelope-o"></i> <abbr title="Email">E</abbr>: <a href="mailto:<%= data.site.email %>"><%= data.site.email %></a></p>
    </div>

  </div>

  <br>
  
  <div class="row">
    <div class="col-md-12">
      <%= data.site.about_text_extra %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-12"><h4>Our logo:</h4></div>
    <div class="col-md-2"><img class='img-responsive' src='<%= data.site.logo %>'></div>
    <div class="col-md-3"><%= data.site.logo_text %></div>
  </div>
  
  <br>

  <!-- Our Customers -->
  
  <div class="row">
    
    <div class="col-lg-12">
      <h2 class="page-header">Our Customers</h2>
    </div>
    
    <% for customer_id in data.site.customers.keys %>
    
    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-6">
      <img class="img-responsive img-customer" 
	   title="<%= data.site.customers[customer_id].name %>" 
	   src="<%= data.site.customers[customer_id].image %>&text=<%= data.site.customers[customer_id].disp %>">
    </div>
        
    <% end %>

  </div>
  
</div>
<!-- /.container -->
