<div class="container">
  
  <div class="row">
    
    <div class="col-lg-12">
      <h1 class="page-header"><i class="fa fa-gears"></i> Services<small> What We Do</small></h1>
      <ol class="breadcrumb">
        <li><a href="<%= data.site.url %>">Home</a></li>
        <li class="active">Services</li>
      </ol>
    </div>
    
  </div>
  <!-- /.row -->
  
  <!-- Service Paragraphs -->
  
  <div class="row">
    
    <div class="col-md-12">
      <p><%= data.services.description %></p>
    </div>
    
  </div>
  <!-- /.row -->
  
  <!-- Service Tabs -->
  
  <div class="row">
    
    <div class="col-lg-12">

      <% if(data.services.subtitle != 'nil') %>
      <h2 class="page-header"><%= data.services.subtitle %></h2>
      <% else %>
      <br><br>
      <% end %>

      <ul id="myTab" class="nav nav-tabs">

	<% for service_id in data.services.services.keys %>
	
	<li <%= (service_id==1) ? 'class="active"' : '' %>>
	  <a href="#service-<%= service_id %>" data-toggle="tab"><%= data.services.services[service_id].name %></a>
        </li>
        
        <% end %>

      </ul>

      <div id="myTabContent" class="tab-content">

	<% for service_id in data.services.services.keys %>

        <div class="tab-pane fade <%= (service_id==1) ? 'in active' : '' %>" id="service-<%= service_id %>">
          <div class="col-sm-4">
	    <img class="img-responsive" src="<%= data.services.services[service_id].image %>">
	  </div>
	  <div class="col-sm-8">

	    <h4><u><%= data.services.services[service_id].name %></u></h4>

	    <% if(data.services.services[service_id].description != 'nil') %>
            <%= data.services.services[service_id].description %>
	    <% end %>

	    <% if(data.services.services[service_id].points != 'nil') %>
	    <ul>
	      <% for point_id in data.services.services[service_id].points.keys %>
	        <li><%= data.services.services[service_id].points[point_id] %></li>
	      <% end %>
	    </ul>
	    <% end %>

	  </div>
        </div>

	<% end %>

      </div>
    
    </div>
    
  </div>
  <!-- /.row -->
  
</div>
<!-- /.container -->
